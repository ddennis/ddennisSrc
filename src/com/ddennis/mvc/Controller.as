package com.ddennis.mvc{	import flash.display.MovieClip;	import flash.display.Sprite;	import flash.events.Event;	import flash.events.MouseEvent;		public class Controller	{		private var _model:*;				private var _nextBtn:Sprite 		private var _prevBtn:Sprite 								public function Controller(){					}										private function nextItem(event:Event = null):void		{			model.setCurrentIndex(model.currentIndex + 1);		}				private function prevItem(event:Event = null):void		{			model.setCurrentIndex(model.currentIndex - 1);		}										public function set model(m:*):void	{			_model = m;		}				public function get model():*		{			return _model;		}								public function set prevBtn(value:Sprite):void {						_prevBtn = value;			value.addEventListener (MouseEvent.CLICK, prevItem)		}				public function set nextBtn(value:Sprite):void {								_nextBtn = value;			value.addEventListener (MouseEvent.CLICK, nextItem)		}										}}