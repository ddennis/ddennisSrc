package com.ddennis.mvc{	import flash.events.EventDispatcher;	import flash.events.Event;	import flash.net.URLRequest;	import flash.net.URLLoader;		public class Model extends EventDispatcher {		public var currentIndex:int = 0;		public var oldCurrentIndex:int 				public var data:*;		public var slideTimer:Number				public static const MODEL_CHANGE:String = "modelChange";		public static const TIMER_SET:String = "timerSet";		public static const CONTENT_LOADED:String = "contetLoaded";						public var bitmapDataArr:Array 		public var totalItems:int;								public function Model()	{						bitmapDataArr = new Array ()					}								public function setCurrentIndex(index:int):void	{						oldCurrentIndex = currentIndex 			currentIndex = index;						currentIndex = controlCurrentIndex(currentIndex);			updateData();									// dispatcher til view.as update som er overtide i slideView			//dispatchEvent(new Event(Model.MODEL_CHANGE));					}															protected function updateData():void{						// Model.as extendens - i den extended model - kaldes updateData() - og den extende model dispatcher dispatchEvent(new Event(Model.MODEL_CHANGE));			dispatchEvent(new Event(Model.MODEL_CHANGE));		}												public function contentLoaded():void {						dispatchEvent(new Event(Model.CONTENT_LOADED));					}										public function controlCurrentIndex(cIndex:int):int	{									if(cIndex>= totalItems)			{				return 0;			}			else if(cIndex< 0)			{				return totalItems - 1;			}						return cIndex					}						}}